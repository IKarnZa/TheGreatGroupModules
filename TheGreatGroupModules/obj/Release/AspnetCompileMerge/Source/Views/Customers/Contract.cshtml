@{
    ViewBag.Title = "ทำสัญญา";
    ViewBag.MainMenu = "ระบบจัดการข้อมูลลูกค้า";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="row bg-title">
    <!-- .page title -->
    <div class="col-md-5">
        <ol class="breadcrumb pull-left">
            <li><a href="#">@ViewBag.MainMenu</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </div>
    <a href="javascript:history.back();" class="btn btn-default pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light"><i class="fa fa-mail-reply"></i> ย้อนกลับ</a>
</div>
<div class="row">
    <div class="col-lg-12 ">

        <div class="white-box">

            <h3 class="m-b-0 m-t-0"> <i class="fa fa-search"></i> @ViewBag.Title</h3> <small class="text-muted db"></small>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <div class="pull-left">
                        <address>
                            <h4> &nbsp;<b>ชื่อลูกค้า : นางวิไล สุดงาม</b></h4>
                            <p class="text-muted m-l-5">
                                สำนักงาน : 555/171 หมู่ที่ 1 ตำบลบางแก้ว อำเภอเมืองสมุทรสงคราม จังหวัดสมุทรสงคราม
                                <br /> เลขผู้เสียภาษีอากร : 0 7555 6000 0349
                            </p>
                        </address>
                    </div>
                    <div class="pull-right text-right">
                        <address>
                            <p class="m-t-10"><b>วันที่เปิด :</b> <i class="fa fa-calendar"></i> 25 กุมภาพันธ์ 2561</p>
                            @*<p><b>วันที่ครบกำหนด :</b> <i class="fa fa-calendar"></i>  15 พฤษภาคม 2561</p>*@
                            <p><b> การชำระเงิน :</b>   เงินสด</p>
                        </address>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <br>
                    <div class="clearfix"></div>
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">เลขที่สัญญา</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="CustomerIdCard" placeholder="">
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">เลขที่ใบกำกับภาษี</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="CustomerIdCard" placeholder="">
                                    </div>
                                    
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-4 control-label">จำนวนงวด : </label>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control" id="CustomerMobile" placeholder="" value="45">
                                    </div>
                                    <label class="col-sm-3 control-label text-right"> งวด</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-3 control-label">งวดละ :</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" id="CustomerIdCard" placeholder="">
                                    </div>
                                    <label for="inputEmail3" class="col-sm-3 control-label text-left">บาท </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4  control-label">งวดสุดท้าย :</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" id="CustomerIdCard" placeholder="">
                                    </div>
                                    <label for="inputEmail3" class="col-sm-3 control-label text-left">บาท </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-4">
                                
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">ดอกเบี้ย : </label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="CustomerMobile" placeholder="" value="20">
                                    </div>
                                    <label for="inputEmail3" class="col-sm-3 control-label"> % </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">วันที่ผ่อนชำระ</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" id="CustomerTitleName">
                                            <option value="นาย">จันทร์-ศุกร์</option>
                                            <option value="นางสาว">ทุกวันทำการ</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </form>

                    <hr>
                    <div class="text-right">

                        <a id="print" class="btn btn-default btn-outline" href="javascript:history.back();"> <span><i class="fa fa-mail-reply"></i> ย้อนกลับ</span> </a>
                        <a class="btn btn-info" href="\Customers/Contract"> <i class="fa fa-save"></i> บันทึก </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>