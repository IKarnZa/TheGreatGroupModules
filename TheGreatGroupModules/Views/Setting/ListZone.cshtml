@{
    ViewBag.Title = "กำหนดพื้นที่ทำงาน";
    ViewBag.MainMenu = "ตั้งค่าระบบ";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}
<div class="row bg-title">
    <!-- .page title -->
    <div class="col-md-5">
        <ol class="breadcrumb pull-left">
            <li><a href="#">@ViewBag.MainMenu</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </div>
    <!-- /.page title -->
    <a href="javascript:history.back();" class="btn btn-default pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light"><i class="fa fa-mail-reply"></i> ย้อนกลับ</a>
</div>
<div class="row">

    <div class="col-lg-12 ">

        <div class="white-box">
            <a onclick="NewZone()" class="btn btn-info pull-right"><i class="fa fa-plus"></i> เพิ่มพื้นที่</a>
            <h3 class="m-b-0 m-t-0"> <i class="fa fa-search"></i> @ViewBag.Title</h3> <small class="text-muted db"></small>
            <hr>

            <!-- ใส่ Grid-->
            <div id="gridListZone"></div>


        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("../Scripts/src/manage_zone.js")
    <script type="text/javascript">

        $(function () {

            $.ajax({
                url: '../Staffs/GetZone',
                type: 'GET',
                contentType: 'application/json',
                success: function (data) {

                    Load_DataGrid(data);
                    // เรียก data grid เพื่อใส่ข้อมูล

                },
                error: function () {
                    console.log("error");
                }
            });


    });



    </script>
}


