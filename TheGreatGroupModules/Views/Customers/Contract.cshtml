@{
    ViewBag.Title = "ทำสัญญา";
    ViewBag.MainMenu = "ระบบจัดการข้อมูลลูกค้า";
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
}

<div class="row bg-title">
    <!-- .page title -->
    <div class="col-md-5">
        <ol class="breadcrumb pull-left">
            <li><a href="#">@ViewBag.MainMenu</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </div>
    <!-- /.page title -->
    <a href="javascript:history.back();" class="btn btn-default pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light"><i class="fa fa-mail-reply"></i> ย้อนกลับ</a>
</div>
<div class="row">

    <div class="col-lg-12 ">

        <div class="white-box">

            <h3 class="m-b-0 m-t-0"> <i class="fa  fa-book"></i> @ViewBag.Title</h3> <small class="text-muted db"></small>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <div class="pull-left">
                        <address>
                            <div id="customerName"></div>
                            <div id="customerAddress"></div>
                        </address>
                    </div>
                    <div class="pull-right text-right">
                        <address>
                            <p><b> การชำระเงิน :</b>   เงินสด</p>
                        </address>
                    </div>
                </div>
            </div>
            

            <div class="row">
                <div class="col-md-12">
                    <h4 class="m-b-0">  ข้อมูลผู้ซื้อร่วม </h4><br>
                    <div id="form4"></div><br>
                     
                    <hr>
                    <h4 class="m-b-0">  ข้อมูลผู้ค้ำประกัน </h4><br>
                    <div id="form1"></div><br>
                    <div id="form2"></div>
                        <hr>
                    <h4 class="m-b-0">  ข้อมูลเงื่อนไขสัญญา </h4><br>
                    <div id="form"></div>
                    
                    <div class="text-right">
                        <a class="btn btn-info" onclick="Submit_Click()"> <i class="fa fa-save"></i> บันทึก </a>
                    </div>
    <hr>
    <h4 class="m-b-0">  ข้อมูลสินค้า </h4><br>
    <div id="loadIndicator"></div>    <div id="gridData"></div>
</div>
                <div id="myPopup"><p>Popup content</p></div>
            </div>

            <div class="row">
                <div class="col-md-12">

                    <hr>
                    <div class="text-right">

                        <a id="print" class="btn btn-default btn-outline" href="javascript:history.back();"> <span><i class="fa fa-mail-reply"></i> ย้อนกลับ</span> </a>
                    
                        <a class="btn btn-success" onclick="PrintCard()"> <i class="fa fa-print"></i> พิมพ์บัตรลูกค้า </a>
                        <a class="btn btn-success" onclick="PrintContract()"> <i class="fa fa-print"></i> พิมพ์สัญญา </a>
                    </div>
                </div>
            </div>

        </div>

    </div>
   
</div>
@section Scripts {
@Scripts.Render("../Scripts/src/add_contract.js")


}